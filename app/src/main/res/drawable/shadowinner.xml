<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pureWhite"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>/>
        </shape>

    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/pureWhite"
                android:centerY="0.30"
                android:endColor="@color/pureWhite"
                android:startColor="@color/pureWhite" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/> />
        </shape>
    </item>

    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"/>

</layer-list>