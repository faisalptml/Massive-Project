<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pureWhite"
    tools:context=".DiscussFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/ractangleup"
        android:orientation="vertical"
        android:elevation="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/montserratbold"
            android:text="Si Merah"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/montserratregular"
            android:text="Yamaha"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="63dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:shapeAppearanceOverlay="@style/Corner"
            app:srcCompat="@drawable/motormerah"
            app:strokeColor="#9DA0AE"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="63dp"
                android:layout_height="65dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/profile"
                app:strokeColor="#9DA0AE"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/montserratbold"
            android:text="Nurmila F."
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="237dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/montserratregular"
            android:text=" @mila99"
            android:textSize="15sp"
            tools:ignore="HardcodedText,RelativeOverlap" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="694dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_searchSchedule"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/costum_edittext"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="8dp"
                android:elevation="15dp"
                android:fontFamily="@font/montserratregular"
                android:hint="Find your schedule"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="#b9b9b9"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_datePrediction"
                tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_profile2"
                android:backgroundTint="@color/pureWhite"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/txtComun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:text="Our Communities"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />

                <TextView
                    android:id="@+id/txtComun2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:paddingStart="25dp"
                    android:text="Letâ€™s be part of us"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/txtComun"
                    tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry,RtlSymmetry" />

                <TextView
                    android:id="@+id/txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:paddingStart="135dp"
                    android:text="View all"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/txtComun2"
                    app:layout_constraintTop_toBottomOf="@+id/txtComun"
                    tools:ignore="HardcodedText,RtlSymmetry,RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtComun2"
                    tools:ignore="DisableBaselineAlignment">

                    <!-- Card 1 -->
                    <RelativeLayout
                        android:id="@+id/btnBengkel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="91dp"
                            android:layout_height="79dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bengkel_cantik"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView1"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/montserratregular"
                            android:text="Bengkel\nCantik"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <!-- Card 2 -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="91dp"
                            android:layout_height="79dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/anak_motor"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView2"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/montserratregular"
                            android:text="Anak Motor\nBanget"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <!-- Card 3 -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="91dp"
                            android:layout_height="79dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tutor_keren"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView3"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/montserratregular"
                            android:text="Tutor\nKeren"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <!-- Card 4 -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="91dp"
                            android:layout_height="79dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ibuibu"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView4"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/montserratregular"
                            android:text="Ibu-ibu\nMotoran"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_profile2"
                android:backgroundTint="@color/pureWhite"
                android:elevation="3dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bengkel_cantik"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtBengkel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:paddingStart="95dp"
                    android:paddingTop="25dp"
                    android:text="Bengkel Cantik"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtBengkel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:paddingStart="95dp"
                    android:paddingTop="48dp"
                    android:text="08:30 am"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtBengkel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:paddingStart="40dp"
                    android:paddingTop="95dp"
                    android:text="Hi, guys! I hope you can change egine oil by yourself"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/bengkelcantik1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="270dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/likeIMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/ok" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="1,234"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/comentIMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/coment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="19"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/saveIMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="155dp"
                        android:src="@drawable/save" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_profile2"
                android:backgroundTint="@color/pureWhite"
                android:elevation="3dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imgView2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/anak_motor"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtAnakmtr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:paddingStart="95dp"
                    android:paddingTop="25dp"
                    android:text="Anak Motor Banget"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtAnakmtr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:paddingStart="95dp"
                    android:paddingTop="48dp"
                    android:text="1 day ago"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtAnakmtr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:paddingStart="40dp"
                    android:paddingTop="95dp"
                    android:text="Letâ€™s talk about how to modif your motor \nproperly"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/anakmotorbat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="270dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/ok" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="1,234"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/imgComent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/coment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/montserratregular"
                        android:text="19"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/imgSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="155dp"
                        android:src="@drawable/save" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>