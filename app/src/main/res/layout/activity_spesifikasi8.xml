            android:paddingStart="30dp"
            android:text="_"
            android:textColor="@color/black"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="HardcodedText,RtlSymmetry" />

