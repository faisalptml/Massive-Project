<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    tools:context=".RescheduleActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserratbold"
        android:text="Reschedule"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/subJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratregular"
        android:text="Fix Si Merahâ€™s Body will be done on.. "
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="25dp" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="31dp"
        android:layout_height="29dp"
        android:src="@drawable/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/tv_maintenanceSchedule3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:text="Maintenance Dates"
        android:textColor="#B9B9B9"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subJudul"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tv_maintenanceDates"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/costum_edittext"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserratregular"
        android:hint="Day, month, year"
        android:padding="12dp"
        android:textColorHint="#b9b9b9"
        app:layout_constraintTop_toBottomOf="@+id/tv_maintenanceSchedule3"
        tools:layout_editor_absoluteX="-82dp" />

    <TextView
        android:id="@+id/tv_maintenanceSchedule4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:text="Maintenance Location"
        android:textColor="#B9B9B9"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_maintenanceDates" />

    <EditText
        android:id="@+id/tv_maintenanceLocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/costum_edittext"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserratregular"
        android:hint="choose your located"
        android:padding="8dp"
        android:textColorHint="#b9b9b9"
        app:layout_constraintTop_toBottomOf="@+id/tv_maintenanceSchedule4"
        tools:layout_editor_absoluteX="-30dp"
        tools:ignore="Autofill,TextFields" />

    <TextView
        android:id="@+id/tv_maintenanceSchedule5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:text="Maintenance Notes"
        android:layout_marginTop="20dp"
        android:textColor="#B9B9B9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_maintenanceLocation" />

    <EditText
        android:id="@+id/tv_maintenanceNotes"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:drawableLeft="@drawable/notes"
        android:background="@drawable/costum_edittext"
        android:drawablePadding="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserratregular"
        android:hint="Breakdown your schedule"
        android:padding="8dp"
        android:textColorHint="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/tv_maintenanceSchedule5"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReschedule"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/costum_button"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/montserratbold"
        android:text="Reschedule"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_maintenanceNotes"
        app:layout_constraintVertical_bias="0.175" />


</androidx.constraintlayout.widget.ConstraintLayout>