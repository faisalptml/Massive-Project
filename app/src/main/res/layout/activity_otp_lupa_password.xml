<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    tools:context=".OtpLupaPasswordActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/arrow_left"
        android:contentDescription="NULL"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036"
        tools:ignore="ContentDescription,HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/enterOtp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:text="Enter OTP"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintVertical_bias="0.019"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/enterOtp2"
        android:layout_width="307dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserratregular"
        android:text="Check your email"
        android:textColor="#b8b8b8"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterOtp1"
        tools:ignore="HardcodedText,MissingConstraints" />

    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterOtp2"
        tools:ignore="MissingConstraints,UselessLeaf">

        <EditText
            android:id="@+id/edt_otp1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/costum_edittext"
            android:layout_marginTop="20dp"
            android:hint="_"
            android:textSize="60sp"
            android:fontFamily="@font/montserratregular"
            android:textColorHint="#b9b9b9"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/costum_edittext"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="_"
            android:textSize="60sp"
            android:fontFamily="@font/montserratregular"
            android:textColorHint="#b9b9b9"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/costum_edittext"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="_"
            android:textSize="60sp"
            android:fontFamily="@font/montserratregular"
            android:textColorHint="#b9b9b9"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/costum_edittext"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="_"
            android:textSize="60sp"
            android:fontFamily="@font/montserratregular"
            android:textColorHint="#b9b9b9"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:paddingStart="15dp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resend"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_otp"
        tools:ignore="MissingConstraints,UselessLeaf">

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserratbold"
            android:background="@color/pureWhite"
            android:text="Resend OTP"
            android:textColor="#3165CF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_otp"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserratbold"
            android:text="in 60s"
            android:textColor="#b3b3b3"
            android:textSize="18sp"
            android:paddingStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_otp"
            tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resendBtn"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/costum_button"
        android:fontFamily="@font/montserratmedium"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend"
        tools:ignore="HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>