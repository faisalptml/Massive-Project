<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUpNotif2Activity">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:background="@drawable/rectangle_schedulepop_up"
        android:backgroundTint="@color/pureWhite"
        android:elevation="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UselessLeaf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="151dp"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:importantForAccessibility="no"
                android:src="@drawable/popup_notifpict2" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="NULL"
                android:src="@drawable/cancel"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:background="@drawable/rectangle_profile2"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Fix Si Merah's Body"
                android:fontFamily="@font/montserratbold"
                android:textSize="18sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/time2"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/dateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2.5dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Friday, 17 November 2023"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/black"
                android:layout_marginStart="31dp"
                android:layout_marginTop="-15dp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNo"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/costum_edittext"
                    android:fontFamily="@font/montserratbold"
                    android:text="Reschedule"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnYa"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="165dp"
                    android:background="@drawable/rectangle_schedulepop_up"
                    android:backgroundTint="@color/primary"
                    android:text="Done"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserratbold"
                    android:textAllCaps="false"
                    android:textColor="@color/pureWhite"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>