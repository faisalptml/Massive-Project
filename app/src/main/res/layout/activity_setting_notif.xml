<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingNotifActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/rectangle_setting"
        android:backgroundTint="@color/pureWhite"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints,UselessLeaf"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/cancelBtn"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/cancel"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="22dp"
            android:text="App's Notifications"
            android:fontFamily="@font/montserratregular"
            android:textSize="25sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="110dp"
            android:text="Show Notifications"
            android:fontFamily="@font/montserratbold"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:text="You will get a notification outside the app"
            android:fontFamily="@font/montserratregular"
            android:textSize="13sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="NULL"
            android:layout_marginStart="350dp"
            android:layout_marginTop="105dp"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="165dp"
            android:text="Show app icon badges"
            android:fontFamily="@font/montserratbold"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="185dp"
            android:text="You will get a notification on icon badges"
            android:fontFamily="@font/montserratregular"
            android:textSize="13sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="162dp"
            android:contentDescription="none"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="223dp"
            android:text="Lock screen notifications"
            android:fontFamily="@font/montserratbold"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="245dp"
            android:text="Allow notifications on the lock screen"
            android:fontFamily="@font/montserratregular"
            android:textSize="13sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="215dp"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="283dp"
            android:text="Allow sound"
            android:fontFamily="@font/montserratbold"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="305dp"
            android:text="Allow notifications to sound"
            android:fontFamily="@font/montserratregular"
            android:textSize="13sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="278dp"
            android:contentDescription="NONE"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="340dp"
            android:text="Allow sound"
            android:fontFamily="@font/montserratbold"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="362dp"
            android:text="Allow notifications to vibrate"
            android:fontFamily="@font/montserratregular"
            android:textSize="13sp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,SpUsage" />

        <Switch
            android:id="@+id/switch5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="338dp"
            android:contentDescription="null"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>